{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@idealjs/camphora-styled": [
        "../../packages/camphora-styled/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/camphora-styled"
    }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/camphora-styled/src"
  ],
  "exclude": ["node_modules"]
}
